# HMAC secret for signing API responses
SECRET_KEY=your-hmac-secret-here

# Security Controls
# Set to 'true' to enable production mode (blocks debug endpoints)
PRODUCTION_MODE=false

# Set to 'true' to enable debug mode even in production (use with caution)
DEBUG=false

# Agent Behavior Controls (for production)
# Set to 'true' to allow agent handoff to human in production
ALLOW_AGENT_HANDOFF=false

# Set to 'true' to allow source citation requests in production
ALLOW_SOURCE_CITATION=false

# Easter Egg Controls
# Set to 'true' to enable UI Easter eggs (animations, console messages) in production
ENABLE_EASTER_EGGS=false
